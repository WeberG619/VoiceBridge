<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material Design 3 -->
    <style name="Theme.VoiceBridge" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material Design 3 Color System -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        
        <!-- Typography & Shape -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.VoiceBridge.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.VoiceBridge.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.VoiceBridge.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.VoiceBridge.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.VoiceBridge.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.VoiceBridge.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.VoiceBridge.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.VoiceBridge.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.VoiceBridge.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.VoiceBridge.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.VoiceBridge.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.VoiceBridge.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.VoiceBridge.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.VoiceBridge.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.VoiceBridge.LabelSmall</item>
        
        <!-- Shape theming -->
        <item name="shapeAppearanceCornerExtraLarge">@style/ShapeAppearance.VoiceBridge.CornerExtraLarge</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.VoiceBridge.CornerLarge</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.VoiceBridge.CornerMedium</item>
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.VoiceBridge.CornerSmall</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.VoiceBridge.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.VoiceBridge.Button.Outlined</item>
        <item name="materialButtonToggleGroupStyle">@style/Widget.VoiceBridge.Button.ToggleGroup</item>
        <item name="textInputStyle">@style/Widget.VoiceBridge.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.VoiceBridge.BottomNavigation</item>
        <item name="toolbarStyle">@style/Widget.VoiceBridge.Toolbar</item>
        
        <!-- Window attributes -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="29">false</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.VoiceBridge.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">400</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">400</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">400</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">500</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">500</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">500</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight" tools:targetApi="28">600</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight" tools:targetApi="28">600</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight" tools:targetApi="28">600</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">400</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">400</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight" tools:targetApi="28">400</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight" tools:targetApi="28">500</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight" tools:targetApi="28">500</item>
    </style>
    
    <style name="TextAppearance.VoiceBridge.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight" tools:targetApi="28">500</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.VoiceBridge.CornerExtraLarge" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerSize">28dp</item>
    </style>
    
    <style name="ShapeAppearance.VoiceBridge.CornerLarge" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.VoiceBridge.CornerMedium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.VoiceBridge.CornerSmall" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Component Styles -->
    <style name="Widget.VoiceBridge.Button" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.VoiceBridge.CornerMedium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="textAppearance">@style/TextAppearance.VoiceBridge.LabelLarge</item>
    </style>
    
    <style name="Widget.VoiceBridge.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.VoiceBridge.CornerMedium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="textAppearance">@style/TextAppearance.VoiceBridge.LabelLarge</item>
    </style>
    
    <style name="Widget.VoiceBridge.Button.ToggleGroup" parent="Widget.Material3.MaterialButtonToggleGroup">
        <item name="selectionRequired">true</item>
        <item name="singleSelection">true</item>
        <item name="shapeAppearance">@style/ShapeAppearance.VoiceBridge.CornerMedium</item>
    </style>
    
    <style name="Widget.VoiceBridge.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.VoiceBridge.CornerMedium</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.VoiceBridge.BodySmall</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>
    
    <style name="Widget.VoiceBridge.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.VoiceBridge.BottomNavigation</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.VoiceBridge.LabelSmall</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.VoiceBridge.LabelSmall</item>
    </style>
    
    <style name="Widget.VoiceBridge.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.VoiceBridge.TitleLarge</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.VoiceBridge.BodyMedium</item>
    </style>

    <!-- Theme Overlays -->
    <style name="ThemeOverlay.VoiceBridge.BottomNavigation" parent="">
        <item name="colorSurfaceContainer">?attr/colorSurface</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- VoiceBridge Specific Component Styles -->
    <style name="Widget.VoiceBridge.VoiceButton" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:minHeight">72dp</item>
        <item name="iconSize">32dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    
    <style name="Widget.VoiceBridge.StatusCard" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearance.VoiceBridge.CornerMedium</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="Widget.VoiceBridge.ProgressIndicator.Circular" parent="Widget.Material3.CircularProgressIndicator">
        <item name="trackColor">?attr/colorSurfaceVariant</item>
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorSize">48dp</item>
    </style>
    
    <style name="Widget.VoiceBridge.ProgressIndicator.Linear" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackColor">?attr/colorSurfaceVariant</item>
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackThickness">6dp</item>
        <item name="trackCornerRadius">3dp</item>
        <item name="indicatorCornerRadius">3dp</item>
    </style>
</resources>